{% extends 'base.html.twig' %}

{% block title %}Achat {% endblock %}

{% block body %}
    <h1>Achat </h1>

    <table class=" table table-bordered ">
        <thead>
            <tr>
                <th>Id</th>
                <th>TypeAchat</th>
                <th>PrixAchat</th>
                <th>DateAchat</th>
                <th>NumeroFacture</th>
              <th>Mail Utilisateur</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for achat in achats %}
            <tr>
                <td>{{ achat.id }}</td>
                <td>{{ achat.TypeAchat }}</td>
                <td>{{ achat.PrixAchat }}</td>
                <td>{{ achat.DateAchat ? achat.DateAchat|date('Y-m-d') : '' }}</td>
                <td>{{ achat.NumeroFacture }}</td>
                 <td>{{ achat.User }}</td>
                 
                <td>
                    <a href="{{ path('achat_show', {'id': achat.id}) }}">show</a>
                    <a href="{{ path('achat_edit', {'id': achat.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('achat_new') }}">Create new</a>
{% endblock %}
